{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Outlier Program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/outlier",
            "args": ["A.txt"],  
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
